@functions {
    string GetSearchAction()
    {
        var path = Context.Request.Path.Value?.ToLower();

        if (!string.IsNullOrEmpty(path) && path.StartsWith("/product/category"))
        {
            return path;
        }

        return "/product/list";
    }
}


<section class="top-bar">
    <div class="container">
        <div class="row gy-2 align-items-center">
            <div class="col-lg-2 col-sm-4 col-4">
                <a href="/" class="navbar-brand"><i class="fa-solid fa-truck-fast"></i> E-Commerce</a>
            </div>

            <div class="col-lg-5 col-sm-8 col-8 order-lg-last">
                <div class="text-end">
                    @if (User.Identity?.IsAuthenticated == true)
                    {

                        <a asp-controller="Account" asp-action="Settings" class="btn btn-light">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Hesabım</span>
                        </a>
                        <a href="#" class="btn btn-light">
                            <i class="fa fa-heart"></i> <span class="ms-1 d-none d-sm-inline-block">Listem</span>
                        </a>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-light">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Çıkış</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Giriş</span>
                        </a>
                        <a asp-controller="Account" asp-action="Create" class="btn btn-light">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Üye Ol</span>
                        </a>
                    }
                    <a href="shopping-cart.html" class="btn btn-light">
                        <i class="fa fa-shopping-cart"></i> <span class="ms-1 d-none d-sm-inline-block">Sepetim</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-5">
                <form method="get" action="@GetSearchAction()">
                    <div class="input-group">
                        <input name="q" type="text" placeholder="Anahtar kelime" class="form-control">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>