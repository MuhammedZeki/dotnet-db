@model List<Product>


@{
    if (@Model.Count > 0)
    {
        <section class="mt-3">
            <div class="container">
                <h4 class="mb-3">Benzer Ürünler</h4>
                <div class="row gy-3">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="card shadow">
                                <div class="img-wrap">
                                    <span class="fa fa-regular fa-heart"></span>
                                    <img src="~/img/@item.Img" alt="@item.Name" class="card-img-top">
                                </div>

                                <div class="border-top info-wrap">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id"
                                        class="title text-truncate">@item.Name</a>
                                    <div class="price-wrap mb-3">
                                        <del class="price">@item.Price ₺</del>
                                    </div>
                                    <a href="#" class="btn btn-light w-100">
                                        <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }

}